<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.androi  d.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ModifierProfileActivity">\

    <EditText

        android:id="@+id/editextAncienmdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ancien mot de passe"
        android:inputType="text" />

    <EditText

        android:id="@+id/editextnouveauMdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nouveau mot de passe"
        android:inputType="text" />


    <EditText
        android:id="@+id/editTextCofirmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmer "
        android:inputType="text" />
    
    <Button
        android:id="@+id/btnModifier"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier"
        />


</LinearLayout>